<% if user_signed_in? %>
  <div class="dropdown">
    <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
      <%= current_user.name %> <span class="caret"></span>
    </button>
    <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenu1">
      <li><%= link_to 'Account', edit_user_registration_path %></li>
      <li><%= link_to 'Log out', destroy_user_session_path, method: 'delete' %></li>
    </ul>
  </div>
<% else %>
  <li><%= link_to 'Connexion', new_user_session_path, class: 'nav_links', data: { toggle: 'modal', target: '#SignInModal' } %></li>
  <li><%= link_to 'Inscrivez-vous', new_user_registration_path, class: 'nav_links' %></li>
<% end%>

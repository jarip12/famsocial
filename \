          /     label.col-md-3.text-right
          /       = "Payment methods"
          /     .col-md-9
          /       = select_tag :payment_methods, options_for_select(@user.payment_methods.map {|pm| [pm.provider, pm.id]})
          /       / = "Add a new payment method"
